<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/topMap_blank_textView"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp" >

            <Button
                android:id="@+id/categoriesBtn"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="28dp"
                android:layout_height="23dp"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"
                android:background="@drawable/button_cat" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/searchBtn"
                    android:layout_width="30dp"
                    android:layout_height="26dp"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:clickable="true"
                    android:background="@drawable/button_search"
                    android:includeFontPadding="false"
                    android:scrollHorizontally="false" />
                
            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/top_map_blank_textView"
            android:layout_width="wrap_content"
            android:layout_height="6dp"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <Button
            android:id="@+id/reportBtn"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="28dp"
            android:layout_height="23dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="left|center"
            android:background="@drawable/button_report" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="0.45" >
        </LinearLayout>

        <Button
            android:id="@+id/crossHairBtn"
            android:layout_width="28dp"
            android:layout_height="23dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/button_target"
            android:clickable="true" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="0.65" >
        </LinearLayout>        
        
    </LinearLayout>

</FrameLayout>
