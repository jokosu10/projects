<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin" 
    android:paddingTop="@dimen/activity_vertical_margin" 
    android:paddingRight="@dimen/activity_horizontal_margin" 
    android:paddingBottom="@dimen/activity_vertical_margin" 
    android:layout_width="match_parent" 
    android:layout_height="match_parent" >
    
    <LinearLayout 
        android:layout_width="match_parent" 
        android:layout_height="0.0dip" 
        android:layout_weight="0.1">
    </LinearLayout>    
    
	    <RelativeLayout
	        android:layout_width="fill_parent"
	        android:layout_height="0.0dip"
	        android:layout_weight="0.6" >

	        <LinearLayout
	            android:id="@+id/linearLayout1"
	            android:layout_width="150.0dip"
	            android:layout_height="80.0dip"
	            android:layout_alignParentTop="true"
	            android:layout_centerHorizontal="true"
	            android:layout_marginTop="20.0dip"
	            android:orientation="vertical" >

	            <LinearLayout
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_gravity="center_horizontal"
	                android:layout_marginTop="15.0dip"
	                android:orientation="horizontal" >

	                <TextView
	                    android:id="@+id/textViewExpenseLabel"
	                    android:layout_width="0.0dip"
	                    android:layout_height="wrap_content"
	                    android:layout_weight="0.4"
	                    android:text="Expenses: "
	                    android:textSize="18.0sp" />

	                <TextView
	                    android:id="@+id/textViewExpenseValue"
	                    android:layout_width="0.0dip"
	                    android:layout_height="wrap_content"
	                    android:layout_weight="0.6"
	                    android:text="0"
	                    android:textSize="18.0sp" />
	            </LinearLayout>

	            <LinearLayout
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_gravity="center_horizontal"
	                android:layout_marginTop="15.0dip"
	                android:orientation="horizontal" >

	                <TextView
	                    android:id="@+id/textViewIncomeLabel"
	                    android:layout_width="0.0dip"
	                    android:layout_height="wrap_content"
	                    android:layout_weight="0.4"
	                    android:text="Income: "
	                    android:textSize="18.0sp" />

	                <TextView
	                    android:id="@+id/textViewIncomeValue"
	                    android:layout_width="0.0dip"
	                    android:layout_height="wrap_content"
	                    android:layout_weight="0.6"
	                    android:text="0"
	                    android:textSize="18.0sp" />
	            </LinearLayout>
	        </LinearLayout>

	        <Button
	            android:id="@+id/ordersBtn"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_below="@+id/linearLayout1"
	            android:layout_centerHorizontal="true"
	            android:layout_marginTop="91dp"
	            android:text=" Create Orders " />

	        <Button
	            android:id="@+id/historyBtn"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_below="@+id/ordersBtn"
	            android:layout_centerHorizontal="true"
	            android:layout_marginTop="54dp"
	            android:text=" History " />

	    </RelativeLayout>
	    
    <LinearLayout 
        android:layout_width="match_parent" 
        android:layout_height="0.0dip" 
        android:layout_weight="0.1">
	</LinearLayout>	        
    
</LinearLayout>