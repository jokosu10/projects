<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="match_parent" 
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:layout_marginTop="50dp"
        android:orientation="horizontal" >
        
        	<TextView
		        android:id="@+id/textTitleTexView"
		        android:layout_width="0dp"
		        android:layout_height="match_parent"
		        android:layout_weight="0.3"
		        android:layout_marginLeft="20dp"
		        android:text="Name: "
		        android:textAppearance="?android:attr/textAppearanceMedium" />
	
			<TextView
		        android:id="@+id/textTitleValue"
		        android:layout_width="0dp"
		        android:layout_height="match_parent"
		        android:layout_weight="0.7"
		        android:layout_marginLeft="10dp"
		        android:layout_marginRight="20dp"
		        android:textAppearance="?android:attr/textAppearanceMedium" />
       
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent" 
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:orientation="horizontal" >
        
        	<TextView
		        android:id="@+id/textDescriptionTexView"
		        android:layout_width="0dp"
		        android:layout_height="match_parent"
		        android:layout_weight="0.3"
		        android:layout_marginLeft="20dp"
		        android:text="Description: "
		        android:textAppearance="?android:attr/textAppearanceMedium" />
	
			<TextView
		        android:id="@+id/textDescriptionValue"
		        android:layout_width="0dp"
		        android:layout_height="match_parent"
		        android:layout_weight="0.7"
		        android:layout_marginLeft="10dp"
		        android:layout_marginRight="20dp"
		        android:textAppearance="?android:attr/textAppearanceMedium" />
       
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent" 
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:orientation="horizontal" >
        
        	<TextView
		        android:id="@+id/textLatitudeTexView"
		        android:layout_width="0dp"
		        android:layout_height="match_parent"
		        android:layout_weight="0.3"
		        android:layout_marginLeft="20dp"
		        android:text="Latitude: "
		        android:textAppearance="?android:attr/textAppearanceMedium" />
	
			<TextView
		        android:id="@+id/textLatitudeValue"
		        android:layout_width="0dp"
		        android:layout_height="match_parent"
		        android:layout_weight="0.7"
		        android:layout_marginLeft="10dp"
		        android:layout_marginRight="20dp"
		        android:textAppearance="?android:attr/textAppearanceMedium" />
       
    </LinearLayout>   
    
    <LinearLayout 
        android:layout_width="match_parent" 
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:orientation="horizontal" >
        
        	<TextView
		        android:id="@+id/textLongitudeTexView"
		        android:layout_width="0dp"
		        android:layout_height="match_parent"
		        android:layout_weight="0.3"
		        android:layout_marginLeft="20dp"
		        android:text="Longitude: "
		        android:textAppearance="?android:attr/textAppearanceMedium" />
	
			<TextView
		        android:id="@+id/textLongitudeValue"
		        android:layout_width="0dp"
		        android:layout_height="match_parent"
		        android:layout_weight="0.7"
		        android:layout_marginLeft="10dp"
		        android:layout_marginRight="20dp"
		        android:textAppearance="?android:attr/textAppearanceMedium" />
       
    </LinearLayout>
    
    
    
    
</LinearLayout>
