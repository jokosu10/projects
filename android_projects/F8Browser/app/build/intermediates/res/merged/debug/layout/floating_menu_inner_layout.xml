<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/box_gray"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewCategory"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="MENU"
                android:gravity="center_horizontal"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="2dp" >

                <Button
                    android:id="@+id/cat_button1"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="Save Current Location"
                    android:background="@drawable/box_blue"
                    android:textSize="13sp"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/cat_button2"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="Search a Location"
                    android:background="@drawable/box_blue"
                    android:textSize="13sp"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/cat_button3"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:text="View Nearby Members"
                    android:background="@drawable/box_blue"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF" />                
                
                <Button
                    android:id="@+id/cat_button4"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:text="View Nearby Members Establishment"
                    android:background="@drawable/box_blue"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF" />
                
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>